<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cLayoutCreateTicket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBCBCB"
    tools:context=".Fragments.CreateTicket">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_create_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="NEW TICKET"
            android:textAlignment="center"
            android:textAppearance="@style/title_style"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="UNIT"
            android:textAlignment="viewStart"
            android:textAppearance="@style/label_style"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- Dropdown Menu-->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            app:boxBackgroundColor="#FFFFFF">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SELECT UNIT"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>
        <!-- -->


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="MOTIVE"
            android:textAppearance="@style/label_style"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- Dropdown Menu 2-->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            app:boxBackgroundColor="#FFFFFF">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_list2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="TICKET MOTIVE"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>
        <!---->

        <EditText
            android:id="@+id/editTextTextMultiLine3"
            android:layout_width="388dp"
            android:layout_height="212dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/btCreateTicket"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="CREATE" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>