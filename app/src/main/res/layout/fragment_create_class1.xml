<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".View.Class.CreateClass1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_create_class1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="NEW CLASS"
            android:textAlignment="center"
            android:textAppearance="@style/title_style"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="CLASS NAME"
            android:textAlignment="viewStart"
            android:textAppearance="@style/label_style"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:background="#FFFFFF">

            <EditText
                android:id="@+id/editClassName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="NAME"
                android:inputType="textPersonName" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="TEACHER"
            android:textAlignment="viewStart"
            android:textAppearance="@style/label_style"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- Dropdown Menu-->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:boxBackgroundColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp">

            <AutoCompleteTextView
                android:id="@+id/lista_profes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SELECT TEACHER"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>
        <!-- -->


        <TextView
            android:id="@+id/textView54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="CLASSROOM"
            android:textAppearance="@style/label_style"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- Dropdown Menu 2-->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            app:boxBackgroundColor="#FFFFFF">

            <AutoCompleteTextView
                android:id="@+id/lista_aulas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SELECT CLASSROOM"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btNextCreateClass"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingHorizontal="48dp"
                    android:text="NEXT" />

                <Button
                    android:id="@+id/btCancelCreateClass"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#E91E63"
                    android:text="CANCEL" />

            </TableRow>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>