<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBCBCB"
    tools:context=".Fragments.CreateClass2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_create_class2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="CLASS DETAILS"
            android:textAlignment="center"
            android:textAppearance="@style/title_style"
            android:textColor="@color/black"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="TEACHER"
            android:textAlignment="viewStart"
            android:textAppearance="@style/label_style"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- Dropdown Menu-->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:boxBackgroundColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp">

            <AutoCompleteTextView
                android:id="@+id/lista_profes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SELECT TEACHER"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>
        <!-- -->


        <TextView
            android:id="@+id/textView54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="CLASSROOM"
            android:textAppearance="@style/label_style"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- Dropdown Menu 2-->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            app:boxBackgroundColor="#FFFFFF">

            <AutoCompleteTextView
                android:id="@+id/lista_aulas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SELECT CLASSROOM"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>
        <!---->


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="20dp"
            android:background="#FFFFFF">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-2dp"
                        android:fontFamily="@font/segoeuib"
                        android:text="CLASSROOM DETAILS"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="20sp" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="-10dp"
                        android:background="?android:attr/listDivider" />

                    <EditText
                        android:id="@+id/classroom_inventory_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="start|top"
                        android:inputType="none"
                        android:text="item\nitem\nitem\nitem\nitem\nitem\nitem\nitem\nitem\nitem\nitem\nitem\nitem\nitem\nitem\nitem\nitem\nitem\nitem\nitem\nitem\n"
                        android:textColor="#000000" />

                </LinearLayout>
            </ScrollView>
        </FrameLayout>

        <CheckBox
            android:id="@+id/check_recurrent_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:checked="true"
            android:fontFamily="@font/segoeuib"
            android:text="RECURRENT CLASS"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btCreateClass2"
                    style="@style/button_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingHorizontal="32dp"
                    android:text="CREATE" />

                <Button
                    android:id="@+id/btCancelCreateClass2"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#E91E63"
                    android:text="CANCEL" />

            </TableRow>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>